---
interface Props {
  title?: string;
}

const { title = 'Web App Catalog' } = Astro.props;
---
<!DOCTYPE html>
<html lang="ja">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
  <title>{title}</title>
</head>
<body class="min-h-screen bg-gray-50">
  <slot />
</body>
</html>
